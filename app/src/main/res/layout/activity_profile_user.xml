<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ProfileUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20sp"
            android:showDividers="end"
            android:divider="@drawable/divider"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_back"
                    android:layout_gravity="center"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/chevron_left_solid"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginEnd="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông Tin Cá Nhân"
                        android:textSize="18sp"
                        android:fontFamily="@font/merriweather_regular"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="20sp"
                    android:showDividers="end"
                    android:divider="@drawable/divider"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/user_solid"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Họ và Tên"
                                android:fontFamily="@font/merriweather_regular"
                                android:textColor="#5C5757"
                                android:textSize="14dp"/>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp">
                                <EditText
                                    android:id="@+id/edt_fullname"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="#D9D9D9"
                                    android:text="Vân Anh"
                                    android:paddingStart="10dp"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:backgroundTint="#D9D9D9"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="20sp"
                    android:showDividers="end"
                    android:divider="@drawable/divider"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/location"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ"
                                android:fontFamily="@font/merriweather_regular"
                                android:textColor="#5C5757"
                                android:textSize="14dp"/>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp">
                                <EditText
                                    android:id="@+id/edt_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:textSize="14dp"
                                    android:background="#D9D9D9"
                                    android:text="Nghệ An"
                                    android:paddingStart="10dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:backgroundTint="#D9D9D9"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:elevation="20sp"
                    android:showDividers="end"
                    android:divider="@drawable/divider"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/phone_solid"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Số điện thoại"
                                android:fontFamily="@font/merriweather_regular"
                                android:textColor="#5C5757"
                                android:textSize="14dp"/>
                            <androidx.cardview.widget.CardView
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp">
                                <EditText
                                    android:id="@+id/edt_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:textSize="14dp"
                                    android:background="#D9D9D9"
                                    android:text="Nghệ An"
                                    android:paddingStart="10dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:backgroundTint="#D9D9D9"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFB2C5"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:id="@+id/SaveEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/circle_check_solid"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Cập nhật thông tin"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/merriweather_bold"
                        android:textSize="16sp"
                        android:textColor="#B62D59"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>